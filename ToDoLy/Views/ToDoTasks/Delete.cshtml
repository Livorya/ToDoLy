@using System.Globalization
@model ToDoLy.Models.ToDoTask

@{
    ViewData["Title"] = "Delete";
}

    <div class="custom-box">
    <h1>Delete</h1>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>ToDoTask</h4>
        <hr />
        @* Division that shows all the details of a task *@
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Project)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Project)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Status)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Status)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.StartDate)
            </dt>
            <dd class="col-sm-9">
                @Model.StartDate.ToString("dddd, d MMMM yyyy", new CultureInfo("en-US"))
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.DueDate)
            </dt>
            <dd class="col-sm-9">
                @Model.DueDate.ToString("dddd, d MMMM yyyy", new CultureInfo("en-US"))
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Notes)
            </dt>
            <dd class="col-sm-9">
                @Html.TextAreaFor(model => model.Notes, 6, 40, new {@readonly = "readonly", @style = "background-color: transparent"})
            </dd>
        </dl>
        
        @* Division that holds the delete button and a link to return to list *@
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
</div>